    HRMRoutput: HRMRoutput {
        compatible = "zmk,behavior-hold-tap";
        label = "HRMROUTPUT";
        bindings = <&kp>, <&out>;

        #binding-cells = <2>;
        tapping-term-ms = <280>;
        quick-tap-ms = <175>;
        flavor = "balanced";
