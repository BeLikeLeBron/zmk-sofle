            bindings = <&to 4>;
            key-positions = <53 56>;
            layers = <0>;
            require-prior-idle-ms = <100>;
        };

        todefault {
            bindings = <&to 0>;
            key-positions = <53 55>;
            layers = <1 3 2 4 5 6>;
            require-prior-idle-ms = <100>;
        };

        esc {
            bindings = <&kp ESCAPE>;
            key-positions = <17 16>;
            require-prior-idle-ms = <100>;
            layers = <0 2 1 3>;
